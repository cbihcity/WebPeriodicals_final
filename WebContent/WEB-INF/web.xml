<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
    <servlet> 
     <servlet-name>log4j-init</servlet-name>
     <servlet-class>by.pvt.heldyieu.servlet.Log4jInit</servlet-class> 
     <init-param>
       <param-name>log4j-init-file</param-name>
       <param-value>WEB-INF/log4j-my.properties</param-value>
     </init-param>
     <load-on-startup>1</load-on-startup>
	</servlet>
    <servlet>
        <servlet-name>addMag-page</servlet-name>
        <jsp-file>/jsp/addMag.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>editMag-page</servlet-name>
        <jsp-file>/jsp/editMag.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>editUser-page</servlet-name>
        <jsp-file>/jsp/editUser.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>editSubscriptionType-page</servlet-name>
        <jsp-file>/jsp/editSubscriptionTypes.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addSubscriptionType-page</servlet-name>
        <jsp-file>/jsp/addSubscriptionTypes.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addSubscription-page</servlet-name>
        <jsp-file>/jsp/addSubscription.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>_addSubscription-page</servlet-name>
        <jsp-file>/jsp/_addSubscription.jsp</jsp-file>
    </servlet>
     <servlet>
        <servlet-name>error-page</servlet-name>
        <jsp-file>/jsp/error/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>success-page</servlet-name>
        <jsp-file>/jsp/success.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>magazines-page</servlet-name>
        <jsp-file>/jsp/magazines.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>subscriptionTypes-page</servlet-name>
        <jsp-file>/jsp/subscriptionTypes.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>users-page</servlet-name>
        <jsp-file>/jsp/users.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>usersSubscriptions-page</servlet-name>
        <jsp-file>/jsp/usersSubscriptions.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>register-page</servlet-name>
        <jsp-file>/jsp/register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>index-page</servlet-name>
        <jsp-file>/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error-page</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>success-page</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>magazines-page</servlet-name>
        <url-pattern>/magazines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subscriptionTypes-page</servlet-name>
        <url-pattern>/subscriptionTypes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>users-page</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usersSubscriptions-page</servlet-name>
        <url-pattern>/usersSubscriptions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addMag-page</servlet-name>
        <url-pattern>/addMag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editMag-page</servlet-name>
        <url-pattern>/editMag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editUser-page</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editSubscriptionType-page</servlet-name>
        <url-pattern>/editSubscriptionTypes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addSubscriptionType-page</servlet-name>
        <url-pattern>/addSubscriptionTypes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addSubscription-page</servlet-name>
        <url-pattern>/addSubscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>_addSubscription-page</servlet-name>
        <url-pattern>/_addSubscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register-page</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index-page</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>ConfigFilter</filter-name>
        <filter-class>by.pvt.heldyieu.filters.ConfigFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ConfigFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<resource-ref>
		<description>mysql</description>
		<res-ref-name>jdbc/periodicals</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	 <!--Bad request-->
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/error/error400.jsp</location>
    </error-page>

    <!--Unauthorized-->
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/error/error401.jsp</location>
    </error-page>

    <!--Forbidden-->
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error/error403.jsp</location>
    </error-page>

    <!--Missing resource-->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/error404.jsp</location>
    </error-page>
</web-app>