<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>WebPeriodicals</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>mysql</description>
		<res-ref-name>jdbc/periodicals</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<context-param>
		<param-name>log4j</param-name>
		<param-value>WEB-INF/log4j-my.properties</param-value>
	</context-param>
	
	<error-page>
		<error-code>400</error-code>
		<location>/WEB-INF/jsp/error/error400.jsp</location>
	</error-page>

	<!--Unauthorized -->
	<error-page>
		<error-code>401</error-code>
		<location>/WEB-INF/jsp/error/error401.jsp</location>
	</error-page>

	<!--Forbidden -->
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/error/error403.jsp</location>
	</error-page>

	<!--Missing resource -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/error404.jsp</location>
	</error-page>
	
</web-app>